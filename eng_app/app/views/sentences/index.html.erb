<p id="notice"><%= notice %></p>

<h1>Sentences</h1>

<table>
  <thead>
    <tr>
      <th>No</th>
      <th>En</th>
      <th>Jp</th>
      <th>Voice data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sentences.each do |sentence| %>
      <tr>
        <td><%= sentence.no %></td>
        <td><%= sentence.en %></td>
        <td><%= sentence.jp %></td>
        <td><%= sentence.voice_data %></td>
        <td><%= link_to 'Show', sentence %></td>
        <td><%= link_to 'Edit', edit_sentence_path(sentence) %></td>
        <td><%= link_to 'Destroy', sentence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @sentences %>

<%= link_to 'New Sentence', new_sentence_path %>
